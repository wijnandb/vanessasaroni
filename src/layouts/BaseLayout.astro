---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Luxury handcrafted bags made sustainably by women, for women. Artisan-woven fabrics from Brazil, designed in Italy." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title} | Vanessa Saroni</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
</head>
<body>

  <!-- Marquee Banner -->
  <div class="marquee">
    <div class="marquee__inner">
      <span>Free Worldwide Shipping & Returns</span>
      <span>Handcrafted with Love</span>
      <span>Made by Women, for Women</span>
      <span>Sustainable Luxury</span>
      <span>Free Worldwide Shipping & Returns</span>
      <span>Handcrafted with Love</span>
      <span>Made by Women, for Women</span>
      <span>Sustainable Luxury</span>
    </div>
  </div>

  <!-- Navigation -->
  <header class="nav">
    <div class="nav__inner container--wide">
      <button class="nav__toggle" aria-label="Menu" id="navToggle">
        <span></span>
        <span></span>
        <span></span>
      </button>

      <a href="/" class="nav__logo">
        <span class="nav__logo-text">Vanessa Saroni</span>
      </a>

      <nav class="nav__links" id="navLinks">
        <a href="/">Home</a>
        <a href="/collections">Collections</a>
        <a href="/our-world">Our World</a>
        <a href="/sustainability">Sustainability</a>
        <a href="/mary-for-life">Mary for Life</a>
        <a href="/collections">Shop</a>
      </nav>

      <div class="nav__actions">
        <a href="/collections" class="nav__shop-link">Shop Now</a>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer__grid">
        <div class="footer__brand">
          <h3 class="footer__logo">Vanessa Saroni</h3>
          <p>Luxury handcrafted bags made sustainably. Each piece tells a story of artisanship, culture, and female empowerment.</p>
          <div class="footer__social">
            <a href="https://instagram.com/vanessasaroni" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="5"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none"/></svg>
            </a>
            <a href="https://facebook.com/vanessasaroni" target="_blank" rel="noopener" aria-label="Facebook">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
            </a>
            <a href="https://pinterest.com/vanessasaroni" target="_blank" rel="noopener" aria-label="Pinterest">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2C6.5 2 2 6.5 2 12c0 4.1 2.5 7.6 6 9.2 0-.7 0-1.6.2-2.4l1.3-5.4s-.3-.7-.3-1.6c0-1.5.9-2.7 2-2.7.9 0 1.4.7 1.4 1.5 0 .9-.6 2.3-.9 3.6-.3 1.1.5 1.9 1.6 1.9 1.9 0 3.2-2.4 3.2-5.3 0-2.2-1.5-3.8-4.2-3.8-3 0-4.9 2.3-4.9 4.8 0 .9.3 1.5.7 2 .2.2.2.3.2.5l-.3 1c-.1.3-.2.3-.5.2-1.3-.5-1.9-1.9-1.9-3.5 0-2.8 2.4-6.2 7.1-6.2 3.8 0 6.3 2.7 6.3 5.7 0 3.9-2.2 6.8-5.4 6.8-1.1 0-2.1-.6-2.4-1.2l-.7 2.7c-.2.8-.7 1.7-1.1 2.3 1 .3 1.9.4 3 .4 5.5 0 10-4.5 10-10S17.5 2 12 2z"/></svg>
            </a>
            <a href="https://linkedin.com/company/vanessasaroni" target="_blank" rel="noopener" aria-label="LinkedIn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
            </a>
          </div>
        </div>

        <div class="footer__links">
          <h4>Explore</h4>
          <a href="/collections">Collections</a>
          <a href="/our-world">Our World</a>
          <a href="/sustainability">Sustainability</a>
          <a href="/mary-for-life">Mary for Life</a>
        </div>

        <div class="footer__links">
          <h4>Shop</h4>
          <a href="/collections">All Bags</a>
          <a href="/collections">Best Sellers</a>
          <a href="/sustainability">Shipping</a>
          <a href="/our-world">About Us</a>
        </div>

        <div class="footer__newsletter">
          <h4>Stay Connected</h4>
          <p>Join our world and receive 10% off your first order.</p>
          <form class="footer__form" action="#" method="get">
            <input type="email" placeholder="Your email" aria-label="Email address" />
            <button type="submit" class="btn btn--filled">Subscribe</button>
          </form>
        </div>
      </div>

      <div class="footer__bottom">
        <p>&copy; {new Date().getFullYear()} Vanessa Saroni. All rights reserved. LS Capital SRL, VAT IT02513810461</p>
      </div>
    </div>
  </footer>

  <style>
    /* Navigation */
    .nav {
      position: sticky;
      top: 0;
      z-index: 100;
      background: var(--color-warm-white);
      border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    }

    .nav__inner {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.2rem clamp(1.5rem, 4vw, 3rem);
      max-width: var(--container-wide);
      margin: 0 auto;
    }

    .nav__logo {
      text-decoration: none;
    }

    .nav__logo-text {
      font-family: var(--font-serif);
      font-size: clamp(1.4rem, 2.5vw, 1.8rem);
      font-weight: 500;
      color: var(--color-black);
      letter-spacing: 0.02em;
    }

    .nav__links {
      display: flex;
      gap: clamp(1.5rem, 3vw, 2.5rem);
    }

    .nav__links a {
      font-family: var(--font-sans);
      font-size: 0.8rem;
      font-weight: 400;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      color: var(--color-charcoal);
      transition: color 0.3s ease;
      position: relative;
    }

    .nav__links a::after {
      content: '';
      position: absolute;
      bottom: -4px;
      left: 0;
      width: 0;
      height: 1px;
      background: var(--color-gold);
      transition: width 0.3s ease;
    }

    .nav__links a:hover::after {
      width: 100%;
    }

    .nav__links a:hover {
      color: var(--color-black);
    }

    .nav__actions {
      display: flex;
      align-items: center;
    }

    .nav__shop-link {
      font-family: var(--font-sans);
      font-size: 0.75rem;
      font-weight: 500;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: var(--color-gold);
      transition: color 0.3s ease;
    }

    .nav__shop-link:hover {
      color: var(--color-terracotta);
    }

    .nav__toggle {
      display: none;
      flex-direction: column;
      gap: 5px;
      background: none;
      border: none;
      cursor: pointer;
      padding: 4px;
    }

    .nav__toggle span {
      display: block;
      width: 24px;
      height: 1.5px;
      background: var(--color-black);
      transition: all 0.3s ease;
    }

    /* Mobile Nav */
    @media (max-width: 900px) {
      .nav__toggle {
        display: flex;
      }

      .nav__links {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--color-warm-white);
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2.5rem;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.4s ease;
        z-index: 200;
      }

      .nav__links.open {
        opacity: 1;
        pointer-events: all;
      }

      .nav__links a {
        font-size: 1.1rem;
      }

      .nav__actions {
        display: none;
      }
    }

    /* Footer */
    .footer {
      background: var(--color-black);
      color: var(--color-sand);
      padding: clamp(4rem, 8vw, 6rem) 0 2rem;
    }

    .footer__grid {
      display: grid;
      grid-template-columns: 2fr 1fr 1fr 2fr;
      gap: clamp(2rem, 4vw, 4rem);
    }

    .footer__logo {
      font-family: var(--font-serif);
      font-size: 1.5rem;
      font-weight: 500;
      color: var(--color-warm-white);
      margin-bottom: 1rem;
    }

    .footer__brand p {
      font-size: 0.9rem;
      line-height: 1.7;
      opacity: 0.7;
      margin-bottom: 1.5rem;
    }

    .footer__social {
      display: flex;
      gap: 1.2rem;
    }

    .footer__social a {
      color: var(--color-sand);
      opacity: 0.6;
      transition: opacity 0.3s ease;
    }

    .footer__social a:hover {
      opacity: 1;
      color: var(--color-gold);
    }

    .footer__links h4,
    .footer__newsletter h4 {
      font-family: var(--font-sans);
      font-size: 0.75rem;
      font-weight: 500;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: var(--color-warm-white);
      margin-bottom: 1.5rem;
    }

    .footer__links a {
      display: block;
      font-size: 0.9rem;
      opacity: 0.6;
      margin-bottom: 0.8rem;
      transition: opacity 0.3s ease;
    }

    .footer__links a:hover {
      opacity: 1;
    }

    .footer__newsletter p {
      font-size: 0.9rem;
      opacity: 0.7;
      margin-bottom: 1.5rem;
    }

    .footer__form {
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
    }

    .footer__form input {
      background: transparent;
      border: 1px solid rgba(255, 255, 255, 0.2);
      padding: 0.8rem 1rem;
      color: var(--color-warm-white);
      font-family: var(--font-sans);
      font-size: 0.85rem;
      outline: none;
      transition: border-color 0.3s ease;
    }

    .footer__form input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }

    .footer__form input:focus {
      border-color: var(--color-gold);
    }

    .footer__form .btn {
      border-color: var(--color-warm-white);
      color: var(--color-warm-white);
      padding: 0.8rem 1.5rem;
      font-size: 0.7rem;
    }

    .footer__form .btn:hover {
      background: var(--color-warm-white);
      color: var(--color-black);
    }

    .footer__bottom {
      margin-top: clamp(3rem, 5vw, 4rem);
      padding-top: 2rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      text-align: center;
    }

    .footer__bottom p {
      font-size: 0.75rem;
      opacity: 0.4;
      margin: 0 auto;
    }

    @media (max-width: 900px) {
      .footer__grid {
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
      }
    }

    @media (max-width: 600px) {
      .footer__grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <script>
    const toggle = document.getElementById('navToggle');
    const links = document.getElementById('navLinks');

    toggle?.addEventListener('click', () => {
      links?.classList.toggle('open');
    });

    // Fade-in observer
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      },
      { threshold: 0.1 }
    );

    document.querySelectorAll('.fade-in').forEach((el) => observer.observe(el));
  </script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
